# Twitter Account Credentials
TWITTER_USERNAME=your_twitter_username
TWITTER_PASSWORD=your_twitter_password

# Telegram Bot Credentials
# Get BOT_TOKEN from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# Get CHAT_ID by messaging your bot and visiting:
# https://api.telegram.org/bot<BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=123456789

# Google AI (Gemini) API Key
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# LLM Model (default: gemini-1.5-flash)
# Options: gemini-1.5-flash, gemini-pro, gemini-1.5-pro
LLM_MODEL=gemini-1.5-flash

# Database Path
DATABASE_PATH=./data/app.db

# Polling Configuration
# How often to check for new tweets (in seconds)
POLL_INTERVAL_SECONDS=60

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# HTTP Request Configuration
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRIES=3
